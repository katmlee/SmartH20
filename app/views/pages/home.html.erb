<div class="homepage-hero-module">
    <div class="video-container">
        <div class="filter"></div>
        <video autoplay loop class="fillWidth">
            <source src="/assets/Cloudy-water.mp4" type="video/mp4">
            <source src="/assets/Cloudy-water.webm" type="video/webm">
        </video>
        <div class="poster hidden">
            <img src="/assets/Cloudy-water.jpg" alt="">
        </div>
        <div class="row login_row">
            <div class="col-md-6 col-md-offset-3 login_form">
              <%= image_tag '/assets/quencH2O.png' %>
                <%= form_tag '/login' do %>
                <div class="form-group">
                    <%= label_tag :email, nil, :autofocus => true %>
                    <%= text_field_tag :email, nil, :class => 'form-control' %>
                </div>
                <div class="form-group">
                    <%= label_tag :password %>
                    <%= password_field_tag :password, nil, :class => 'form-control'%>
                </div>
                <%= submit_tag 'Login' %>
                <% end %>
            </div>
        </div>
    </div>
</div>
